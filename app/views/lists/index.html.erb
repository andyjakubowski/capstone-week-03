<p id="notice"><%= notice %></p>

<h1>Lists 💾</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>

<h2>Categories</h2>
<% if @categories.empty? %>
  <p>There are no categories yet 🤷🏿‍♀️</p>
<% else %>
  <p>There <%= @categories.one? ? 'is' : 'are' %> <%= @categories.size %> <%= 'category'.pluralize @categories.size %>.</p>
  <%= render 'categories/list' %>
<% end %>

<%= link_to 'Add Category', new_category_path %>
