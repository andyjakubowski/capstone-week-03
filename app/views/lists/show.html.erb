<p id="notice"><%= notice %></p>

<h1>List: <%= @list.name %></h1>

<p>This list has <%= @list.tokens.size %> <%= 'token'.pluralize @list.tokens.size %>.</p>

<% @groupedTokens.each do |categoryName, tokens| %>
  <h2><%= categoryName %></h2>
  <%= render tokens %>
<% end %>

<h2>Add a token:</h2>
<%= render 'tokens/form', token: [@list, @list.tokens.new] %>

<%= link_to 'Back to all lists', lists_path %>
<%= link_to 'Edit list', edit_list_path(@list) %> |
